@page
@model LaboratoryPosts.Pages.AlterPostModel
@{
    ViewData["Title"] = "AlterPost";
}

<h1>Manutenção</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
                <ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="1"></li>
                    <li data-target="#myCarousel" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner" role="listbox">
                    <div class="item active">
                        <img src="https://cdn-cv.r4you.co/wp-content/uploads/2019/10/Araucaria-1068x712.jpg" class="img-responsive" />
                    </div>
                    <div class="item">
                        <img src="https://www.floresefolhagens.com.br/wp-content/uploads/2015/05/araucaria-araucaria-angustifolia-768x512.jpg" class="img-responsive" />
                    </div>
                    <div class="item">
                        <img src="http://s2.glbimg.com/uBu9tLK6qS_nlIq-sMzkazjAXxs=/620x465/s.glbimg.com/jo/g1/f/original/2014/01/30/araucaria.jpg" class="img-responsive" />
                    </div>
                </div>
                <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
            <div class="form-group">
                <label class="control-label">Nome</label>
                <input class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Nome científico</label>
                <input class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Informações</label>
                <input class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-success" />
            </div>

        </form>
    </div>
</div>