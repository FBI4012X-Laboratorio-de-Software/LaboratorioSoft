@page
@model IndexModel
@{
    ViewData["Title"] = "Login";
}

<div class="container">
    <a class="links" id="paracadastro"></a>
    <a class="links" id="paralogin"></a>

    <div class="content">
        <div class="col-md-4">
            <div id="login">
                <form method="post" action="">
                    <h1>Login</h1>

                    <div class="form-group">
                        <label class="control-label" name="Login">Nome</label>
                        <input asp-for="UserModel.Login" class="form-control" placeholder="Nome de usuario" />
                    </div>

                    <div class="form-group">
                        <label class="control-label" name="Password">Senha</label>
                        <input asp-for="UserModel.Password" class="form-control" type="password" placeholder="*****" />
                    </div>

                    <div class="form-group">
                        <input type="submit" value="OK" class="btn btn-success" />
                    </div>
                </form>
            </div>
        </div>
    </div>


